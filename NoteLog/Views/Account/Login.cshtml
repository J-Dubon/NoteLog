<div class="card login-card">
    <div class="row no-gutters">
        <div class="col-md-5">
            <img src="~/img/loginImg.jpg" alt="login" class="login-card-img">
        </div>
        <div class="col-md-7">
            <div class="card-body">
                <div class="brand-wrapper">
                    <img src="~/img/loginImg.jpg" alt="logo" class="logo">
                </div>
                <p class="login-card-description">Inicia sesión con tu cuenta</p>
                <form action="#!">
                    <div class="form-group">
                        <label for="userName" class="sr-only">Nombre de usuario</label>
                        <input name="userName" id="userName" class="form-control" placeholder="Nombre de usuario"  autocomplete="off">
                    </div>
                    <div class="form-group mb-4">
                        <label for="password" class="sr-only">Contraseña</label>
                        <input type="password" name="password" id="password" class="form-control" placeholder="***********">
                    </div>
                    <input name="login" id="login" class="btn btn-block login-btn mb-4" type="button" value="Entrar">
                </form>
                <p class="login-card-footer-text"> ¿No tienes una cuenta? <a asp-area="" asp-controller="Account" asp-action="Register" class="text-reset"> Registrate aquí!</a></p>
                <!--<nav class="login-card-footer-nav">
                    <a href="#!">Terms of use.</a>
                    <a href="#!">Privacy policy</a>
                </nav>-->
            </div>
        </div>
    </div>
</div>
<script src="~/js/LoginUser.js" type="text/javascript"></script>