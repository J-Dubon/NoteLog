
@{

}

<div class="container">
    <div class="card login-card">
        <div class="row no-gutters">
            <div class="col-md-5">
                <img src="~/img/loginImg.jpg" alt="login" class="login-card-img">
            </div>
            <div class="col-md-7">
                <div class="card-body">
                    <div class="brand-wrapper text-center">
                        <i class="far fa-user-circle fa-5x"></i>
                    </div>
                    <div class="text-center">
                        <p class="login-card-description">Inicia sesión con tu cuenta</p>
                        <div class="abs-center">
                            <form action="#!" class="form">
                                <div class="form-group">
                                    <label for="userName" class="sr-only">Nombre de usuario</label>
                                    <input name="userName" id="userName" class="form-control" placeholder="Nombre de usuario" autocomplete="off" maxlength="50">
                                </div>
                                <div class="form-group mb-4">
                                    <label for="password" class="sr-only">Contraseña</label>
                                    <input type="password" name="password" id="password" class="form-control" placeholder="***********" maxlength="50">
                                </div>
                                <input name="login" id="login" class="btn btn-block login-btn mb-4" type="button" value="Entrar">
                            </form>
                        </div>
                        <p class="login-card-footer-text"> ¿No tienes una cuenta? <a asp-area="" asp-controller="Account" asp-action="Register" class="text-reset"> Registrate aquí!</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/js/LoginUser.js" type="text/javascript"></script>